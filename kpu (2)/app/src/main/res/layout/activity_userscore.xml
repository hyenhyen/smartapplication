<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.monad.kpu.Activty.MenuActivity">
    <LinearLayout
        android:background="#455469"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="#FFF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="성적입력"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#dfebf6"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="과목별 백분위를 입력하세요."
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="국어  : " />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#fff"></LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etKorean"
                        android:inputType="number"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="영어  : " />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#fff"></LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etEnglish"
                        android:inputType="number"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="수학 : " />

                            <RadioGroup
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <RadioButton
                                    android:id="@+id/math_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가" />

                                <RadioButton
                                    android:id="@+id/math_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='나'/>
                            </RadioGroup>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#fff"></LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etMath"
                        android:inputType="number"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="탐구 1  : " />

                            <RadioGroup
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <RadioButton
                                    android:id="@+id/society"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="사회" />

                                <RadioButton
                                    android:id="@+id/science"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='과학'/>
                                <RadioButton
                                    android:id="@+id/job"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='직업'/>
                            </RadioGroup>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#fff"></LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etEtc1"
                        android:inputType="number"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="500dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="탐구 2  : " />

                            <RadioGroup
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >
                                <RadioButton
                                    android:id="@+id/society2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="사회"/>

                                <RadioButton
                                    android:id="@+id/science2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='과학' />

                                <RadioButton
                                    android:id="@+id/job2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text='직업'/>
                            </RadioGroup>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#fff"></LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etEtc2"
                        android:inputType="number"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edit" />
                </LinearLayout>


                <Button
                    android:id="@+id/btn_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:radius="15dp"
                    android:background="#FFF"
                    android:text="점수 계산" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
